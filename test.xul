          <menuitem label="Item5"/>
          <menuitem label="Item6"/>        
        </menu>
      </menu>
    </menubar>
	<splitpane orient="horizontal" resizeable="true">
		<expandable>
			<titlebar label="Buttons"/>
			<button id="button1"
			        label="Button1"
			        onclick="component.setBackground(Color.RED)"
			        width="100px"
			        height="100px"/>
			<button id="button2"
			        label="Button2"
			        onclick="component.setBackground(Color.RED)"
			        width="100px"
			        height="100px"/>
			<button id="button3"
			        label="Button3"
			        onclick="component.setBackground(Color.RED)"
			        width="100px"
			        height="100px"/>
			<button id="button4"
