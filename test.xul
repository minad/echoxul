			        onclick="component.setBackground(Color.RED)"
			        width="100px"
			        height="100px"/>
			<button id="button5"
			        label="Button5"
			        onclick="playWithFire()"
			        width="100px"
			        height="100px"/>
		</expandable>
	    <vbox>
		    <richtext/>
			<groupbox>
			  <radiogroup>
			    <radio label="radio1"/>
			    <radio label="radio2"/>
			    <radio label="radio3"/>
