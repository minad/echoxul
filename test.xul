<?xml version="1.0"?>
<window>
  <splitpane orient="vertical">
  	<script>
		function playWithFire() {
		  	button1.getButton().setBackground(Color.RED);
		  	button2.getButton().setBackground(Color.GREEN);
		   	button3.getButton().setBackground(Color.BLUE);
		   	button4.getButton().setBackground(Color.YELLOW);
			button5.getButton().setBackground(Color.ORANGE);
		}
	</script>
    <menubar>
      <menu label="Menu1">
        <menuitem label="Item1"/>
        <menuitem label="Item2"/>
        <menuitem label="Item3"/>
        <menuitem label="Item4"/>
